algoritmo "ValorePares"

var
    cont, valor: inteiro

inicio
escreva("Digite um valor: ")
leia(valor)

    escreval("Crescente")
    para cont <- 0 ate valor passo 2 faca
    escreva(cont, " ")
    fimPara

    escreva("\n")
    escreval("Descrente")
    para cont <- valor ate 0 passo -2 faca
    escreva(cont, " ")
    fimPara

fimalgoritmo