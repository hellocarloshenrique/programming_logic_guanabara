algoritmo "Turma"

var
    nome: vetor[1..4] de caractere
    n1: vetor[1..4] de real
    n2: vetor[1..4] de real
    m: vetor[1..4] de real
    i: inteiro
inicio
    para i <- 1 ate 4 faca
        escrevaL(i, "ยบ Aluno:")
        escreva("NOme: ")
        leia(nome[i])

        escreva("Primeira nota: ")
        leia(n1[i])
        escreva("Segunda nota: ")
        leia(n2[i])
        escreva("\n")

        m[i] <- (n1[i] + n2[i]) / 2
    fimpara

fimAlgoritmo