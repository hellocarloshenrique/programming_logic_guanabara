algoritmo "primeiro"
var
    nome: caractere
    numero1, numero2: inteiro
    soma: inteiro
inicio
    escreva("Digite seu nome: ")
    leia (nome)
    escreva(nome, ", Digite um numero: ")
    leia(numero1)
    escreva("Agora escreva outro número: ")
    leia(numero2)
    soma <- numero1 + numero2
    escreva(nome, ", a soma de " , numero1,  " e ", numero2, " é igual a: ", soma)

fimalgoritmo